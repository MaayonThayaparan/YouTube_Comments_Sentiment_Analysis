# === Server configuration ===
# YouTube Data API v3 key (required for fetching comments + metadata)
YOUTUBE_API_KEY=

# Port for the Express server
PORT=5177

# Throttle (ms) between YouTube API page fetches to respect rate limits
YT_THROTTLE_MS=200

# Allowed origins for the React client (comma-separated). Use * for local/dev.
ALLOWED_ORIGINS=*

# In-memory LRU cache for scored results
CACHE_ENABLED=true
CACHE_MAX_ITEMS=50
CACHE_TTL_MS=900000  # 15 minutes
